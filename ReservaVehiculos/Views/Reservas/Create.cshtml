@model ReservaVehiculos.Models.Reserva

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Nueva Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreCliente" class="control-label"></label>
                <input asp-for="NombreCliente" class="form-control" />
                <span asp-validation-for="NombreCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaPickup" class="control-label"></label>
                <input asp-for="FechaPickup" class="form-control" />
                <span asp-validation-for="FechaPickup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LugarPickup" class="control-label"></label>
                <input asp-for="LugarPickup" class="form-control" />
                <span asp-validation-for="LugarPickup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDropoff" class="control-label"></label>
                <input asp-for="FechaDropoff" class="form-control" />
                <span asp-validation-for="FechaDropoff" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LugarDropoff" class="control-label"></label>
                <input asp-for="LugarDropoff" class="form-control" />
                <span asp-validation-for="LugarDropoff" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
